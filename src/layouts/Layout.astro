---
import CacheManager from '../components/CacheManager.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Understand what\'s happening in the markets with expert analysis, market updates, and educational content that breaks down complex financial topics for everyday investors' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#000000" />
    <meta name="keywords" content="stock market, investment, trading, zerodha, NIFTY, Bank NIFTY, financial education, market analysis, India" />
    <meta name="author" content="Zerodha" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="rating" content="general" />
    <meta name="revisit-after" content="1 day" />
    <meta name="distribution" content="global" />
    <meta name="language" content="English" />
    <meta name="geo.region" content="IN" />
    <meta name="geo.country" content="India" />
    <meta name="ICBM" content="12.9716,77.5946" />
    <meta name="geo.position" content="12.9716;77.5946" />
    <meta name="geo.placename" content="Bangalore, India" />
    
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="ZContent" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icon-192.svg" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Market Insights by Zerodha" href="/feed.xml" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Market Insights by Zerodha" />
    <meta property="og:image" content="https://zerodha-market-insights.pages.dev/icon-512.svg" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@zerodhaonline" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://zerodha-market-insights.pages.dev/icon-512.svg" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Market Insights by Zerodha",
        "description": "Understand what's happening in the markets with expert analysis, market updates, and educational content that breaks down complex financial topics for everyday investors",
        "url": "https://zerodha-market-insights.pages.dev",
        "publisher": {
          "@type": "FinancialService",
          "name": "Zerodha",
          "url": "https://zerodha.com",
          "logo": {
            "@type": "ImageObject",
            "url": "https://zerodha-market-insights.pages.dev/icon-512.svg",
            "width": 512,
            "height": 512
          },
          "sameAs": [
            "https://twitter.com/zerodhaonline",
            "https://www.facebook.com/zerodha.social",
            "https://www.linkedin.com/company/zerodha",
            "https://www.youtube.com/user/zerodhaonline"
          ]
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://zerodha-market-insights.pages.dev/?search={search_term_string}",
          "query-input": "required name=search_term_string"
        },
        "about": [
          {
            "@type": "Thing",
            "name": "Stock Market Analysis",
            "description": "Expert analysis of Indian stock markets including NIFTY and Bank NIFTY"
          },
          {
            "@type": "Thing", 
            "name": "Investment Education",
            "description": "Educational content for retail investors in India"
          },
          {
            "@type": "Thing",
            "name": "Market Updates",
            "description": "Daily market updates and financial news analysis"
          }
        ],
        "audience": {
          "@type": "Audience",
          "audienceType": "Retail Investors",
          "geographicArea": {
            "@type": "Country",
            "name": "India"
          }
        }
      }
    </script>
    
    <title>{title}</title>
    
    <script is:inline>
      // Register Service Worker
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
  </head>
  <body class="min-h-screen bg-white text-black antialiased overflow-x-hidden">
    <slot />
    
    <!-- Cache Manager Component -->
    <CacheManager />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
    max-width: 100vw;
  }
  
  body {
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    font-size: 16px;
  }
  
  /* Typography improvements */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.4;
    font-weight: 600;
  }
  
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
  }
  
  h2 {
    font-size: 1.875rem;
  }
  
  h3 {
    font-size: 1.5rem;
  }
  
  p {
    font-size: 1rem;
    line-height: 1.7;
    color: #374151;
  }
  
  /* Better button styles */
  button, .btn {
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  /* Content spacing */
  .prose {
    max-width: none;
  }
  
  /* Line clamp utility */
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  
  .line-clamp-3 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
  
  /* Custom scrollbar for webkit browsers */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f5f5f5;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }
  
  /* Focus styles - only for keyboard navigation */
  :focus-visible {
    outline: 2px solid #000;
    outline-offset: 2px;
  }
  
  /* Remove focus outline on mouse click */
  :focus:not(:focus-visible) {
    outline: none;
  }
  
  /* Specifically for buttons and tabs */
  button:focus, [role="tab"]:focus {
    outline: none;
    box-shadow: none;
    border: none;
  }
  
  /* Selection styles */
  ::selection {
    background: #000;
    color: #fff;
  }
  
  /* Hide scrollbar utility */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>