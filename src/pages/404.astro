---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Market Insights by Zerodha" description="The page you're looking for doesn't exist">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 md:px-8 lg:px-12">
    <div class="min-h-[60vh] flex items-center justify-center">
      <div class="text-center space-y-6">
        <!-- 404 Icon -->
        <div class="space-y-4">
          <div class="text-6xl mb-4">🔍</div>
          <h1 class="text-4xl font-bold text-gray-900">Page Not Found</h1>
          <p class="text-lg text-gray-600 max-w-md mx-auto">
            The page you're looking for doesn't exist or may have been moved.
          </p>
        </div>

        <!-- Available Sources -->
        <div class="bg-gray-50 rounded-lg p-6 max-w-md mx-auto">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Available Sources</h2>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="text-gray-600">📺 Videos</div>
            <div class="text-gray-600">🎙️ Podcasts</div>
            <div class="text-gray-600">📧 Newsletters</div>
            <div class="text-gray-600">📝 Blogs</div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition-colors font-medium"
          >
            Go to Home
          </a>
          <a 
            href="/sources" 
            class="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-50 transition-colors font-medium"
          >
            View All Sources
          </a>
        </div>

        <!-- Search Suggestion -->
        <div class="pt-4">
          <p class="text-sm text-gray-500">
            Try searching for content using the search bar on our <a href="/" class="text-blue-600 hover:underline">homepage</a>.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>