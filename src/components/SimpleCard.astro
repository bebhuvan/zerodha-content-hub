---
import type { ContentItem } from '../types/content';

interface Props {
  content: ContentItem;
}

const { content } = Astro.props;
---

<div style="border: 1px solid #ccc; padding: 20px; margin: 10px;">
  <h3>{content.title}</h3>
  <p>{content.description}</p>
  <a href={`/post/${content.id}`} style="display: inline-block; background: blue; color: white; padding: 10px; text-decoration: none;">
    View Post
  </a>
</div>
