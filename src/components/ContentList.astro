---
// Content will be dynamically loaded by SearchAndFilter component
---

<div class="space-y-8" id="content-container">
  <!-- Loading State (shown initially) -->
  <div id="loading-state" class="space-y-6">
    {[1, 2, 3].map(() => (
      <div class="animate-pulse">
        <div class="h-4 bg-gray-200 rounded w-1/4 mb-4"></div>
        <div class="space-y-3">
          <div class="h-6 bg-gray-200 rounded w-3/4"></div>
          <div class="h-4 bg-gray-200 rounded w-full"></div>
          <div class="h-4 bg-gray-200 rounded w-5/6"></div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- No Results State -->
  <div id="no-results" class="hidden text-center py-16">
    <div class="max-w-md mx-auto space-y-4">
      <svg class="w-16 h-16 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">No content found</h3>
      <p class="text-gray-500">Try adjusting your search or filters to find what you're looking for.</p>
    </div>
  </div>
</div>