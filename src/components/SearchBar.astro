<div class="relative max-w-3xl mx-auto">
  <input
    type="text"
    id="search-input"
    placeholder="Search videos, podcasts, and newsletters..."
    aria-label="Search videos, podcasts, and newsletters"
    class="w-full px-6 py-4 pr-12 text-lg border-2 border-gray-200 rounded-lg focus:border-black focus:ring-2 focus:ring-black focus:ring-opacity-10 transition-all duration-200 bg-white placeholder-gray-500 focus:outline-none shadow-sm"
  />
  
  <!-- Search Icon -->
  <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </div>
  
  <!-- Clear Button (hidden by default) -->
  <button
    id="clear-search"
    aria-label="Clear search"
    class="absolute right-11 top-1/2 -translate-y-1/2 hidden hover:bg-gray-100 p-1 rounded"
  >
    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</div>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const clearButton = document.getElementById('clear-search');
  
  // Clear search functionality
  clearButton?.addEventListener('click', () => {
    searchInput.value = '';
    clearButton.classList.add('hidden');
    searchInput.focus();
    
    // Trigger search update
    searchInput.dispatchEvent(new Event('input'));
  });
</script>